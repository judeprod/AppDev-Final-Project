<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Detailed Tracking Bottom Sheet Dialog Layout
    PHASE2-FEAT-P1-023: Enhanced Estimation Logic (Professor Feedback)
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailed_tracking_title"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textStyle="bold"
        android:textColor="@color/primary_700" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:text="@string/detailed_tracking_subtitle"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/gray_600" />

    <!-- Water Source Selector -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/source_label"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="@color/gray_700"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleSourceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/btnShower">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShower"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/source_shower" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBucket"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/source_bucket" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Pressure Gauge -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_label"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="@color/gray_700"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/togglePressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/btnPressureNormal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPressureLow"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pressure_low" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPressureNormal"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pressure_normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPressureHigh"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pressure_high" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Eco-Mode Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:background="@drawable/bg_eco_mode_card">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eco_mode_label"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/gray_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eco_mode_description"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/gray_500" />

        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchEcoMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/accent_500"
            app:trackTint="@color/accent_200" />

    </LinearLayout>

    <!-- Duration Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDuration"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="@string/duration_label"
        app:suffixText="min"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="5" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Estimated Volume Display -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/primary_50"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Volume"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/primary_700" />

            <TextView
                android:id="@+id/tvEstimatedVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="45.0 L"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/primary_500" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Log Activity Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogActivity"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/log_detailed_activity"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/primary_500" />

</LinearLayout>
