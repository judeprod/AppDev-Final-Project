<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   Controls what data is included in cloud backups
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include Room database for backup -->
        <include domain="database" path="." />
        <!-- Include DataStore preferences -->
        <include domain="sharedpref" path="." />
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="user_credentials.xml" />
    </cloud-backup>
    <device-transfer>
        <!-- Include all data for device-to-device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
