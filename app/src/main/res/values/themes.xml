<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Light Theme -->
    <style name="Theme.SaveOurWater" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_500</item>
        <item name="colorSecondaryVariant">@color/accent_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.SaveOurWater.Splash" parent="Theme.SaveOurWater">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_700</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.SaveOurWater.NoActionBar" parent="Theme.SaveOurWater">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.SaveOurWater.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.SaveOurWater.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.SaveOurWater.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.SaveOurWater.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.SaveOurWater.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SaveOurWater.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.SaveOurWater.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="elevation">8dp</item>
    </style>
</resources>
